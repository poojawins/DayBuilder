<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_stock">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:id="@+id/stock_header">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/stock_title"
                    android:textSize="40sp"
                    android:id="@+id/stock_title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/stock_update"
                    android:id="@+id/stock_update"/>


            </LinearLayout>

            <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
                android:id="@+id/dynamicListView_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/button_stock_refresh"
                    android:textColor="@color/white"
                    android:text="@string/stock_refresh"
                    android:background="@color/green"
                    android:drawableLeft="@drawable/ic_action_refresh"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/button_stock_add"
                    android:textColor="@color/white"
                    android:text="@string/stock_add"
                    android:background="@color/blue"
                    android:drawableLeft="@drawable/ic_action_new"/>

            </LinearLayout>





        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>